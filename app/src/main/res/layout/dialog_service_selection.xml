<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <RadioGroup
        android:id="@+id/radioGroupServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar" />

        <RadioButton
            android:id="@+id/radioHelpdesk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Helpdesk" />

        <RadioButton
            android:id="@+id/radioTreasury"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treasury" />

        <RadioButton
            android:id="@+id/radioScholarship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scholarship" />

        <RadioButton
            android:id="@+id/radioAdmission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admission" />
    </RadioGroup>
</LinearLayout>
